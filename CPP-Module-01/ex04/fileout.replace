NAMESNAME = main

SRC = main.cpp

OBJECT = $(SRC:.cpp=.o)

CC = c++
CPPFLAGS = -Wall -Wextra -Werror -std=c++98

all : $(NAMESNAME)

$(NAMESNAME): $(OBJECT)
	$(CC) $(CPPFLAGS) $(OBJECT) -o $(NAMESNAME)

clean:
	rm -rf $(OBJECT)

fclean: clean
	rm -rf $(NAMESNAME)

re: fclean all

.PHONY: all clean fclean re	
